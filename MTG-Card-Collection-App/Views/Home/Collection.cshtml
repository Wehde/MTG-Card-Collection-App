@model CollectionViewModel

@{
    ViewData["Title"] = "Collection";
}

<h1>Collection</h1>

@if (Model.Cards.Count == 0)
{
    <p>Your collection is Empty. Please add some cards.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Cost</th>
                <th>Type</th>
                <th>Power</th>
                <th>Toughness</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Card card in Model.Cards)
            {
                <tr>
                    <th>@card.Name</th>
                    <th>@card.ManaCost</th>
                    <th>@card.Type</th>
                    <th>@card.Power</th>
                    <th>@card.Toughness</th>
                </tr>
            }
        </tbody>
    </table>
}
